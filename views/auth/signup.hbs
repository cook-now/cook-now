<div class="login-form">
  <div class="login-container">
    <h1>Signup</h1>

    <form action="/auth/signup" method="POST" id="form-container">

      {{#if message }}
      <div class="alert alert-danger">{{ message }}</div>
      {{/if}}

      <input class="input" id="username" type="text" name="username" {{#if usernameInput}}value={{usernameInput}}{{/if}}
        placeholder="Username">


      <br><br>
      <input class="input" id="password" type="password" name="password" placeholder="Password | min. 6 char">

      <input type="submit" value="Submit">


      <br><br><br>
      {{!-- <button class="button">Create account</button> --}}
      <br>
      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>
</div>