<div class="fullscreen-bg">
  <video loop muted autoplay poster="../images/bg-home.png" class="fullscreen-bg__video">
    <source src="../images/cook.mp4" type="video/mp4">
  </video>
</div>

<div class="top-home">

  <div class="title-home">

    <h1>COOK NOW!</h1>
    <h2>Explore the force of your fridge.</h2>
    <p>Cook Now is an app for a better fridge rests usage.</p>
    {{!-- {{#if loggedIn}} --}}
    {{!-- <a class="btn btn-outline-info" href="/recipe/create">Create Recipe</a> --}}
    {{!-- {{else}} --}}
    <a class="btn btn-outline-danger" href="/auth/signup">Create your account</a>
    {{!-- {{/if}} --}}
  </div>
</div>

<br>
<div class="title">
  {{!-- <h1>Popular Recipes</h1> --}}
</div>
<div class="flex-container">
  {{#each recipes}}
  <div class="each-recipe">
    <a href="/recipes/{{_id}}">
      <img src="{{image}}">
      <p>{{title}}</p>
    </a>
  </div>
  {{/each}}
</div>